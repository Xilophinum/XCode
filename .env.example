# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_URL=./data/flowforge.db

# For other database types, uncomment and configure:
# DATABASE_TYPE=postgres
# DATABASE_URL=postgresql://username:password@localhost:5432/projects_db

#DATABASE_TYPE=mysql
#DATABASE_URL=mysql://user:password@localhost:3306/flowforge

# Application Configuration
APP_NAME=FlowForge
APP_ENV=development
APP_PORT=3000

#Websocket
WEBSOCKET_HEARTBEAT_TIMEOUT=60000
WEBSOCKET_HEARTBEAT_CHECK_INTERVAL=30000

# Slack OAuth Integration (for Slack notification type)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_DEFAULT_CHANNEL=#general

# Discord Webhook (optional - can also be set directly in notification nodes)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/123456789/abcdefghijklmnopqrstuvwxyz

# Oauth Providers (optional - leave empty to disable)
NUXT_OAUTH_GITHUB_CLIENT_ID=
NUXT_OAUTH_GITHUB_CLIENT_SECRET=

NUXT_OAUTH_GOOGLE_CLIENT_ID=
NUXT_OAUTH_GOOGLE_CLIENT_SECRET=

NUXT_OAUTH_MICROSOFT_CLIENT_ID=
NUXT_OAUTH_MICROSOFT_CLIENT_SECRET=
NUXT_OAUTH_MICROSOFT_TENANT=common